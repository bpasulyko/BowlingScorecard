<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bpasulyko.bowlingscorecard.Stats">

    <include android:id="@+id/my_toolbar" layout="@layout/toolbar" />
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TableRow android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="15dp">
            <TextView
                android:text="RUNNING AVERAGE"
                android:layout_weight="1"
                android:gravity="start"/>
            <TextView
                android:id = "@+id/runningAvg"
                android:layout_weight="1"
                android:gravity="start"
                android:theme="@style/StatValues"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="15dp">
            <TextView
                android:text="BEST AVERAGE"
                android:layout_weight="1"
                android:gravity="start"/>
            <TextView
                android:id = "@+id/bestAvg"
                android:layout_weight="1"
                android:gravity="start"
                android:theme="@style/StatValues"/>
        </TableRow>
        <TableRow android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="15dp">
            <TextView
                android:text="BEST GAME"
                android:layout_weight="1"
                android:gravity="start"/>
            <TextView
                android:id = "@+id/bestGame"
                android:layout_weight="1"
                android:gravity="start"
                android:theme="@style/StatValues"/>
        </TableRow>
        <TableRow android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="15dp">
            <TextView
                android:text="WORST GAME"
                android:layout_weight="1"
                android:gravity="start"/>
            <TextView
                android:id = "@+id/worstGame"
                android:layout_weight="1"
                android:gravity="start"
                android:theme="@style/StatValues"
                />
        </TableRow>
        <TableRow android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="15dp">
            <TextView
                android:text="BEST 3-GAME SERIES"
                android:layout_weight="1"
                android:gravity="start"/>
            <TextView
                android:id = "@+id/best3GameTotal"
                android:layout_weight="1"
                android:gravity="start"
                android:theme="@style/StatValues" />
        </TableRow>
        <TableRow android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="15dp">
            <TextView
                android:text="3-GAME AVERAGE"
                android:layout_weight="1"
                android:gravity="start"/>
            <TextView
                android:id = "@+id/threeGameAverage"
                android:layout_weight="1"
                android:gravity="start"
                android:theme="@style/StatValues"/>
        </TableRow>
        <TableRow android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="15dp">
            <TextView
                android:text="TOTAL GAMES"
                android:layout_weight="1"
                android:gravity="start"/>
            <TextView
                android:id = "@+id/numberOfGames"
                android:layout_weight="1"
                android:gravity="start"
                android:theme="@style/StatValues"/>
        </TableRow>
        <TableRow android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="15dp">
            <TextView
                android:text="GAMES OVER AVERAGE"
                android:layout_weight="1"
                android:gravity="start"/>
            <TextView
                android:id = "@+id/gamesOverAvgerage"
                android:layout_weight="1"
                android:gravity="start"
                android:theme="@style/StatValues"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
