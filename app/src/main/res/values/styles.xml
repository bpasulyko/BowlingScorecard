<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">#BDBDBD</item>
        <item name="android:editTextColor">@color/colorText</item>
        <item name="android:colorControlNormal">#BDBDBD</item>
    </style>

    <style name="MyToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">#FFF</item>
    </style>

    <style name="StatValues" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>
</resources>
